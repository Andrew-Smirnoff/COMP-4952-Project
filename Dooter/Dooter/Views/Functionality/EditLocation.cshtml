@model Location
@{
    Model.Latitude = 3.21;
    Model.Longitude = 1.23;
}
@Html.HiddenFor(m => m.Latitude);
@Html.HiddenFor(m => m.Longitude);
@{
    ViewBag.Title = ViewBag.Action + " a location";
}
<div class="container">
    <div class="d-flex flex-column justify-content-center align-items-center mt-5">
        <form asp-action="EditLocation" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card card-custom border-0 border-radius-sm card-add-location p-0">

                <div class="border border-3 border-secondary border-radius-sm rounded-top mb-3">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/d/d1/Image_not_available.png" class="card-img-top mx-auto d-block image-not-available" alt="Image not available">

                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary p-1 m-1">
                            <div class="add-photo-button d-flex align-items-center">
                                <svg class="svg-white-color" width="28" height="28" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                                    <!--! Font Awesome Pro 6.2.0 by fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. -->
